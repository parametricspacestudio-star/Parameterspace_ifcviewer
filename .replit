modules = ["nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"

# ------------------------------
# WORKSPACE (Run button)
# ------------------------------
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "IFC Viewer"

[[workflows.workflow]]
name = "IFC Viewer"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

# ------------------------------
# DEPLOYMENT (AUTOSCALE)
# ------------------------------
[deployment]
deploymentTarget = "static"
build = ["npm"]
run = ["node", "./dist/index.cjs"]
publicDir = "dist"
