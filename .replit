modules = ["nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"

# ------------------------------
# WORKSPACE (Run button)
# ------------------------------
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "IFC Viewer"

[[workflows.workflow]]
name = "IFC Viewer"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000"
waitForPort = 5000

# ------------------------------
# PORTS
# ------------------------------
[[ports]]
localPort = 5000
externalPort = 80

# ------------------------------
# DEPLOYMENT (AUTOSCALE)
# ------------------------------
[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = [
  "node",
  "./node_modules/serve/build/main.js",
  "-s",
  "dist",
  "-l",
  "5000"
]
publicDir = "dist"
